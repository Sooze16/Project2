<div class="container">
  {{!-- logo panel --}}
  <div class="row">
    <div class="col-md-4">
      <img src="/assets/images/logos/full-logo-tag.png" id="logo" alt="logo and tagline">
    </div>
  </div>

  <div class="row">
    <ul>
      <li><strong>Client: </strong><span id="fullName"></span></li>
      <li><strong>Zip code: </strong><span id="zipcode"></span></li>
      <li><strong>Email: </strong><span id="email"></span></li>
      <li><strong>Phone: </strong><span id="phoneNum"></li>
    </ul>
    <br>
  </div>

  <div class="row">
    <div class="btn-toolbar justify-content-center" role="toolbar" aria-label="Toolbar with button groups">
      <div class="btn-group mr-2" role="group" aria-label="First button">
        <button type="button" class="user-controls">UPDATE<br>PROFILE</button>
      </div>
      <div class="btn-group mr-2" role="group" aria-label="Second button">
        <button class="user-controls">TEST<br>SENSORS</button>
      </div>
      <div class="btn-group mr-2" role="group" aria-label="Second button">
        <button class="user-controls">RESET<br>SENSOR</button>
      </div>
    </div>
  </div>

  {{!-- main image panel --}}
  <div class="col-md-8">
    <div class="row">
      <img src="/assets/images/backgrounds/calm-day.png" id="background">
      {{!-- weather details --}}
      {{!-- <p id="forcast">The current conditions in your home zip code:</p> --}}
    </div>

    <div class="row">
      {{!-- icons --}}
      <div class="img-circle" id="icon1">

        <img src="/assets/images/button-icons/air.png">
      </div>

      <div class="img-circle" id="icon2">
        <img src="/assets/images/button-icons/fire.png">
      </div>

      <div class="img-circle" id="icon3">
        <img src="/assets/images/button-icons/earth.png">
      </div>

      <div class="img-circle-4" id="icon4">
        <img src="/assets/images/button-icons/water.png" id="icon">
      </div>
    </div>
  </div>

</div>
